{% extends '::base.html.twig' %}

{%block title%}{{recipe.name}}{% endblock%}

{%block body%}
<h1>{{ recipe.name }}</h1>
<h2>Por {{ recipe.author }}</h2>
<p>{{ recipe.description }}</p>
<h3>Ingredientes</h3>
<ul>
    {% for ingredient in recipe.ingredients %}
    <li>{{ingredient}}</li>
    {% endfor %}
</ul>
{% endblock%}